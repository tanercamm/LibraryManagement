@model IEnumerable<BookViewModel>

<h2>Books</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Image</th>
            <th>Title</th>
            <th>Description</th>
            <th>Publisher</th>
            <th>PageCount</th>
            <th>Created State</th>
            <th>Updated State</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td><img class="img-thumbnail" width="100px" height="150" src="@item.ImageUrl" alt="@item.Title" /></td>
                <td>@item.Title</td>
                <td>
                    <span data-bs-toggle="tooltip" title="@item.Description">
                        @(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)
                    </span>
                </td>

                <td>@item.Publisher</td>
                <td>@item.PageCount</td>
                <td>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@(item.UpdateDate.HasValue ? item.UpdateDate.Value.ToString("yyyy-MM-dd HH:mm:ss") : "Not Updated")</td>

                <td>
                    <a class="btn btn-info btn-sm" asp-controller="Book" asp-action="Details" asp-route-id="@item.Id">
                        <i class="bi bi-info-circle"></i> Details
                    </a>
                    <a class="btn btn-warning btn-sm" asp-controller="Book" asp-action="Update" asp-route-id="@item.Id">
                        <i class="bi bi-pencil-square"></i> Update
                    </a>
                    <form asp-controller="Book" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('Are you sure you want to delete this book?');">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
