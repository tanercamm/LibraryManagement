@model BookUpdateViewModel

<h2>Update Book</h2>
<hr />

<form method="post" asp-controller="Book" asp-action="Update" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-9">
            <div asp-validation-summary="All"></div> @*Tüm validation hatalarını gösterir*@

            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="mb-3">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>@*ilgili validation hatasını gösterir*@
            </div>

            <div class="mb-3">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Publisher"></label>
                <textarea asp-for="Publisher" class="form-control"></textarea>
                <span asp-validation-for="Publisher" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PageCount"></label>
                <textarea asp-for="PageCount" class="form-control"></textarea>
                <span asp-validation-for="PageCount" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="imageFile">Book Image</label>
                <input type="file" id="imageFile" name="imageFile" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            @* <br />
            <button type="submit" class="btn btn-dark">Submit</button> *@
        </div>
        <div class="col-md-3 d-flex flex-column align-items-center">
            <div class="mb-3 w-100">
                <br />
                <br />
                <button type="submit" class="btn btn-outline-success w-100">Save</button>
            </div>
            <div class="w-100">
                <a class="btn btn-outline-warning w-100" href="/book/index">Back</a>
            </div>
        </div>

    </div>
</form>